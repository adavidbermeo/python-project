# Codigo del vendedor
# Asignar la variable
cod_vendedor = input("Digite el código del vendedor")
print(cod_vendedor)
 
# primera validación cantidad de digitos
def calcular_cantidad_digitos(cod_vendedor):
    num_caracteres=len(cod_vendedor)
    print(num_caracteres)

calcular_cantidad_digitos(cod_vendedor)

# segunda validación tercer digito es asterisco
def posicion_asterisco(cod_vendedor):
    position=cod_vendedor.find("*")
    print(position)

posicion_asterisco(cod_vendedor)

